        <TextBox Name="Textbox7" HorizontalAlignment="Left" Height="29" Margin="98,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <Label Content="CHOOSE DOCTOR" HorizontalAlignment="Left" Height="52" Margin="25,10,0,0" VerticalAlignment="Top" Width="228"/>
        <TextBox x:Name="Textbox6" HorizontalAlignment="Left" Height="32" Margin="98,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175"/>
